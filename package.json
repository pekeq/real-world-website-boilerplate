{
  "private": true,
  "config": {
    "serve_dir": "/path/to/serve-directory/"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist/ && mkdir -p dist${npm_package_config_serve_dir}{.,sp}/img/",
    "start": "npm-run-all clean -p copy watch serve",
    "serve": "browser-sync start -c bs.config.js",
    "build:html": "node scripts/html.js --pretty",
    "build:css_pc": "node-sass src/pc/css/style.scss | postcss -c postcss.config.js -o dist${npm_package_config_serve_dir}style.css",
    "build:css_sp": "node-sass src/sp/css/style.scss | postcss -c postcss.config.js -o dist${npm_package_config_serve_dir}sp/style.css",
    "build:js_pc": "browserify src/pc/js/main.js | uglifyjs -c -m > dist${npm_package_config_serve_dir}bundle.js",
    "build:js_sp": "browserify src/sp/js/main.js | uglifyjs -c -m > dist${npm_package_config_serve_dir}sp/bundle.js",
    "build:img_pc": "imagemin src/pc/img/* -o dist${npm_package_config_serve_dir}img/",
    "build:img_sp": "imagemin src/sp/img/* -o dist${npm_package_config_serve_dir}sp/img/",
    "build": "npm-run-all clean -p build:* copy",
    "watch:html": "node scripts/html.js --watch",
    "watch:css_pc": "chokidar 'src/pc/css/**' --initial -c 'node-sass src/pc/css/style.scss dist${npm_package_config_serve_dir}style.css --source-map true --source-map-contents'",
    "watch:css_sp": "chokidar 'src/sp/css/**' --initial -c 'node-sass src/sp/css/style.scss dist${npm_package_config_serve_dir}sp/style.css --source-map true --source-map-contents'",
    "watch:js_pc": "watchify src/pc/js/main.js -o dist${npm_package_config_serve_dir}bundle.js -d -v",
    "watch:js_sp": "watchify src/sp/js/main.js -o dist${npm_package_config_serve_dir}sp/bundle.js -d -v",
    "watch:img_pc": "chokidar 'src/pc/img/**' --initial -c 'cp -r src/pc/img/ dist${npm_package_config_serve_dir}img/'",
    "watch:img_sp": "chokidar 'src/sp/img/**' --initial -c 'cp -r src/sp/img/ dist${npm_package_config_serve_dir}sp/img/'",
    "watch": "npm-run-all -p watch:*",
    "copy:root": "cp -r assets/ dist/",
    "copy:pc": "cp -r src/pc/assets/ dist${npm_package_config_serve_dir}",
    "copy:sp": "cp -r src/sp/assets/ dist${npm_package_config_serve_dir}sp/",
    "copy": "npm-run-all -p copy:*"
  },
  "dependencies": {
    "core-js": "^2.4.1",
    "jquery": "^3.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-preset-es2015": "^6.13.2",
    "babelify": "^7.3.0",
    "browser-sync": "^2.14.0",
    "browserify": "^13.1.0",
    "browsersync-ssi": "^0.2.4",
    "chokidar": "^1.6.0",
    "chokidar-cli": "^1.2.0",
    "glob": "^7.0.5",
    "imagemin-cli": "^3.0.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.8.0",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2",
    "postcss-csso": "^1.1.2",
    "pug-cli": "^1.0.0-alpha6",
    "uglify-js": "^2.7.0",
    "watchify": "^3.7.0"
  },
  "engines": ">=6.0.0"
}
